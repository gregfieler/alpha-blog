<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, "Category name", class: "col-2 mt-4 col-form-label text-light" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control mt-4 shadow rounded", placeholder: "Enter a name" %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <%= f.submit class: "btn btn-outline-light btn-lg mt-4 " %>
  </div>
<% end %> 