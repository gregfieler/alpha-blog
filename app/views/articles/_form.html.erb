<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label mt-3 text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded mt-3", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label mt-3 text-light" %>
          <div class="col-10"> 
          <!-- multiple was not working as expected - wrong bootstrap version?? nope, control command click -->
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "what's this virtinote\✌️ about? (pick many or none)"}, 
            { multiple: true, size: 6, class: "custom-select mt-3 form-control shadow rounded" }) %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg mt-4" %>
        </div>
      <% end %>
    </div>
    
    <div class="text-center mb-3">
      <%= link_to '[ Cancel and return to virtinote listing ]', articles_path, class: "text-info justify-center" %>
    </div>
  </div>
</div>      
  
