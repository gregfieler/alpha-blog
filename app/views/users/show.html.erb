<h1 class="text-center mt-4 mb-4"><%= @user.username %>'s virtinotes</h1>

<%= gravatar_for @user, size: 200 %>

<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
  </div>
<% end %>

<h3 class="text-center mt-4">midnight sneaks</h3>

<div class="flickr_pagination">
  <%=will_paginate @articles, :container => false, :previous_label => "newer", :next_label => "older" %>
</div>

<%= render 'articles/article' %>

<div class="flickr_pagination mt-4 mb-4">
  <%=will_paginate @articles, :container => false, :previous_label => "newer", :next_label => "older" %>
</div>